
{
  "name": "trade-composer",
  "version": "2.0.1",
  "private": true,
  "packageManager": "pnpm@10.20.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter web dev",
    "dev:web": "pnpm --filter web dev",
    "dev:api": "python -m uvicorn apps.partner-api.main:app --reload --host 0.0.0.0 --port 8080",
    "build": "pnpm -r build || true",
    "typecheck": "pnpm -r typecheck || true",
    "sanity": "node ./scripts/sanity.mjs",
    "ci": "pnpm install && pnpm typecheck && pnpm build"
  }
}
